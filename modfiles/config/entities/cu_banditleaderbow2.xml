    <Logic classname="GGL::CGLSettlerProps">
        <Class>GGL::CSettler</Class>
        <AccessCategory>AccessCategorySettler</AccessCategory>
        <NeedsPlayer>true</NeedsPlayer>
        <ForceNoPlayer>false</ForceNoPlayer>
        <Hat/>
        <Cost>
            <Gold>0</Gold>
        </Cost>
        <Category>Military</Category>
        <Category>Leader</Category>
        <Category>Bow</Category>
        <AdjustWalkAnimSpeed>true</AdjustWalkAnimSpeed>
        <MaxHealth>250</MaxHealth>
        <Exploration>25</Exploration>
        <ArmorClass>ArmorClassNone</ArmorClass>
        <ArmorAmount>3</ArmorAmount>
        <DodgeChance>0</DodgeChance>
        <IdleTaskList>TL_MILITARY_IDLE</IdleTaskList>
        <ExperiencePoints>45</ExperiencePoints>
        <AttractionSlots>1</AttractionSlots>
        <Upgrade>
            <Category>BanditLeaderBow2</Category>
        </Upgrade>


        <ModifyArmor>
            <Technology>T_SoftArcherArmor</Technology>
        </ModifyArmor>
        <ModifyArmor>
            <Technology>T_PaddedArcherArmor</Technology>
        </ModifyArmor>
        <ModifyArmor>
            <Technology>T_LeatherArcherArmor</Technology>
        </ModifyArmor>
        <ModifyArmor>
            <Technology>T_BetterTrainingArchery</Technology>
        </ModifyArmor>

        <ModifyExploration>
            <Technology>T_Fletching</Technology>
        </ModifyExploration>
        <ModifyExploration>
            <Technology>T_BetterTrainingArchery</Technology>
        </ModifyExploration>

        <ModifyMaxRange>
            <Technology>T_Fletching</Technology>
        </ModifyMaxRange>
        <ModifyMaxRange>
            <Technology>T_BetterTrainingArchery</Technology>
        </ModifyMaxRange>

        <ModifyDamage>
            <Technology>T_BodkinArrow</Technology>
        </ModifyDamage>
        <ModifyDamage>
            <Technology>T_BetterTrainingArchery</Technology>
        </ModifyDamage>

        <ModifySpeed>
            <Technology>T_BetterTrainingArchery</Technology>
        </ModifySpeed>
    </Logic>
    <Behavior>
        <Logic classname="GGL::CGLAnimationBehaviorExProps">
            <Class>GGL::CGLBehaviorAnimationEx</Class>
            <SuspensionAnimation>PU_SoldierBow3_Idle1</SuspensionAnimation>
            <AnimSet>SET_SOLDIERBOW3</AnimSet>
        </Logic>
        <Display classname="ED::CBehaviorProps">
            <Class>ED::CDisplayBehaviorAnimation</Class>
        </Display>
    </Behavior>
    <Behavior>
        <Logic classname="EGL::CMovementBehaviorProps">
            <Class>GGL::CLeaderMovement</Class>
            <Speed>360</Speed>
            <RotationSpeed>30</RotationSpeed>
            <MoveTaskList>TL_NPC_WALK</MoveTaskList>
            <MoveIdleAnim>PU_SoldierBow3_Idle1</MoveIdleAnim>
        </Logic>
        <Display classname="ED::CBehaviorProps">
            <Class>ED::CDisplayBehaviorMovement</Class>
        </Display>
    </Behavior>
    <Behavior>
        <Logic classname="EGL::CGLEBehaviorProps">
            <Class>GGL::CBehaviorWalkCommand</Class>
        </Logic>
    </Behavior>
    <Behavior>
        <Logic classname="GGL::CLeaderBehaviorProps">
            <Class>GGL::CLeaderBehavior</Class>
            <BarrackUpgradeCategory>Archery</BarrackUpgradeCategory>
            <HomeRadius>3000</HomeRadius>

            <SoldierType>CU_BanditSoldierBow2</SoldierType>

            <BattleTaskList>TL_BATTLE_CROSSBOW</BattleTaskList>

            <NormalAttackAnim1>PU_SoldierBow3_Attack1</NormalAttackAnim1>
            <NormalAttackAnim2>PU_SoldierBow3_Attack1</NormalAttackAnim2>
            <CounterAttackAnim>PU_SoldierBow3_Attack1</CounterAttackAnim>
            <FinishingMoveAnim>PU_SoldierBow3_Attack1</FinishingMoveAnim>
            <MissAttackAnim>PU_SoldierBow3_Attack1</MissAttackAnim>
            <BattleIdleAnim>PU_SoldierBow3_IdleAttack1</BattleIdleAnim>
            <BattleWalkAnim>PU_SoldierBow3_Run1</BattleWalkAnim>
            <HitAnim>PU_SoldierBow3_Hit</HitAnim>

            <DamageClass>DC_Arrow</DamageClass>
            <DamageAmount>16</DamageAmount>
            <MaxRandomDamageBonus>3</MaxRandomDamageBonus>

            <BattleWaitUntil>1500</BattleWaitUntil>

            <MissChance>2</MissChance>

            <ProjectileEffectID>FXCrossBowArrow</ProjectileEffectID>
            <MaxRange>2500</MaxRange>
            <MinRange>500.0f</MinRange>
            <AutoAttackRange>2700</AutoAttackRange>

            <HealingPoints>5</HealingPoints>
            <HealingSeconds>2</HealingSeconds>

            <UpkeepCost>20</UpkeepCost>

        </Logic>
    </Behavior>

    <Behavior>
        <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
            <Class>GGL::CLimitedAttachmentBehavior</Class>
            <Attachment>
                <Type>ATTACHMENT_LEADER_SOLDIER</Type>
                <Limit>12</Limit>
            </Attachment>
        </Logic>
    </Behavior>

    <Behavior>
        <Logic classname="GGL::CGLBehaviorPropsDying">
            <Class>GGL::CGLBehaviorDying</Class>
            <DyingTaskList>TL_DIE</DyingTaskList>
        </Logic>
    </Behavior>



    <Behavior>
        <Logic classname="EGL::CGLEBehaviorProps">
            <Class>GGL::CLeaderEvadeBehavior</Class>
        </Logic>
    </Behavior>

    <Behavior>
        <Logic classname="GGL::CEvadeExecutionBehaviorProps">
            <Class>GGL::CEvadeExecutionBehavior</Class>
            <BasePriority>400</BasePriority>
        </Logic>
    </Behavior>


    <Behavior>
        <Logic classname="GGL::CReplaceableEntityBehaviorProperties">
            <Class>GGL::CReplaceableEntityBehavior</Class>
            <EntityType>XD_DroppedBow</EntityType>
        </Logic>
    </Behavior>














</root>
