	        <DamageAmount>22</DamageAmount>
	        <MaxRandomDamageBonus>4</MaxRandomDamageBonus>
	        
	        <BattleWaitUntil>2300</BattleWaitUntil>
	        
	        <MissChance>20</MissChance>
	        
	        <ProjectileEffectID>FXCavalryArrow</ProjectileEffectID>
	        <MaxRange>2800</MaxRange>
	        <MinRange>0</MinRange>
	        <AutoAttackRange>3000</AutoAttackRange>
	        
			<HealingPoints>5</HealingPoints>
	        <HealingSeconds>3</HealingSeconds>
	        
	        <UpkeepCost>20</UpkeepCost>
		  </Logic>
	</Behavior>
    
	<Behavior>
		  <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
			  <Class>GGL::CLimitedAttachmentBehavior</Class>
            <Attachment>
                <Type>ATTACHMENT_LEADER_SOLDIER</Type>
                <Limit>5</Limit>
            </Attachment>
		</Logic>
	</Behavior>
	
	<Behavior>
		  <Logic classname="GGL::CGLBehaviorPropsDying">
			  <Class>GGL::CGLBehaviorDying</Class>
