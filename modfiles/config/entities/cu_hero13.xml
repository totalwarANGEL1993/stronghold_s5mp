            <Money>1</Money>
        </Cost>
        <Convertible>false</Convertible>
        <Category>Hero</Category>
        <Category>Military</Category>
        <Category>Melee</Category>
        <AdjustWalkAnimSpeed>true</AdjustWalkAnimSpeed>
        <Exploration>22</Exploration>
