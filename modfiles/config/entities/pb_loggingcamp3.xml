<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<root>
    <Display classname="ED::CDisplayEntityProps">
        <Class>ED::CDisplayBuilding</Class>
        <Model>PB_WoodMine3</Model>
    </Display>
    <Logic classname="GGL::CGLBuildingProps">
        <Class>GGL::CBuilding</Class>
        <AccessCategory>AccessCategoryBuilding</AccessCategory>
        <Category>Workplace</Category>
        <Category>DefendableBuilding</Category>
        <NeedsPlayer>true</NeedsPlayer>
        <ForceNoPlayer>false</ForceNoPlayer>
        <MaxHealth>1400</MaxHealth>
        <ArmorClass>ArmorClassFortification</ArmorClass>
        <ArmorAmount>6</ArmorAmount>
        <Exploration>15</Exploration>
        <BuildOn>XD_ForestGlade1</BuildOn>
        <Category>WoodSupplier</Category>
        <Worker>PU_Woodcutter</Worker>
        <MaxWorkers>7</MaxWorkers>
        <InitialMaxWorkers>7</InitialMaxWorkers>
        <WorkTaskList>
            <Start>TL_WOODCUTTER_WORK_INSIDE_START</Start>
            <Work>TL_WOODCUTTER_WORK_INSIDE</Work>
        </WorkTaskList>


        <ModifyArmor>
            <Technology>T_Masonry</Technology>
        </ModifyArmor>

        <ModifyExploration>
            <Technology>T_TownGuard</Technology>
        </ModifyExploration>
        
        
        <UpgradeSite>ZB_UpgradeSiteUniversity1</UpgradeSite>
        <Upgrade>
            <Category>LoggingCamp</Category>
        </Upgrade>

        <ConstructionInfo>
            <BuilderSlot>
                <Position>
                    <X>-500</X>
                    <Y>0</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>-500</X>
                    <Y>-300</Y>
                </Position>
                <Orientation>0</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>-400</X>
                    <Y>-600</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
            <BuilderSlot>
                <Position>
                    <X>400</X>
                    <Y>-600</Y>
                </Position>
                <Orientation>90</Orientation>
            </BuilderSlot>
            <ConstructionSite>ZB_ConstructionSiteUniversity1</ConstructionSite>
        </ConstructionInfo>
        <ApproachPos>
            <X>-76</X>
            <Y>-600</Y>
        </ApproachPos>
        <ApproachR>0</ApproachR>
        <DoorPos>
            <X>500</X>
            <Y>400</Y>
        </DoorPos>
        <Blocked1>
            <X>-550</X>
            <Y>650</Y>
        </Blocked1>
        <Blocked2>
            <X>900</X>
            <Y>-500</Y>
        </Blocked2>
    </Logic>
    <Behavior>
        <Logic classname="EGL::CGLEBehaviorProps">
            <Class>EGL::GLEBehaviorMultiSubAnims</Class>
        </Logic>
        <Display classname="ED::CBehaviorProps">
            <Class>ED::CDisplayBehaviorBuildingAnimation</Class>
        </Display>
    </Behavior>
    <Behavior>
        <Logic classname="GGL::CMineBehaviorProperties">
            <Class>GGL::CMineBehavior</Class>
            <AmountToMine>8</AmountToMine>
        </Logic>
    </Behavior>



    <!--AnSu: I will test if it is better to have all buildings as defender buildings-->
    <Behavior>
        <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
            <Class>GGL::CLimitedAttachmentBehavior</Class>
            <Attachment>
                <Type>ATTACHMENT_DEFENDER_BUILDING</Type>
                <Limit>10</Limit>
            </Attachment>
        </Logic>
    </Behavior>

    <Behavior>
        <Logic classname="EGL::CGLEBehaviorProps">
            <Class>GGL::CBuildingBehavior</Class>
        </Logic>
        <Display classname="GD::CBuildingBehaviorProps">
            <Class>GD::CBuildingBehavior</Class>
            <Banner>Default</Banner>
            <NumDamageEffects>14</NumDamageEffects>
            <NumDestroyEffects>12</NumDestroyEffects>
        </Display>
    </Behavior>

    <Behavior>
        <Logic classname="GGL::CDefendableBuildingBehaviorProps">
            <Class>GGL::CDefendableBuildingBehavior</Class>
        </Logic>
    </Behavior>



</root>
